    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Phoenix Test Environment",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/server-runtime/debug/bin/Debug/net7.0/Phoenix.Debug.DebugServerRunner.dll",
            "args": [
                "../../../project.json",
				"run"
            ],
            "cwd": "${workspaceFolder}/Server/bin/Debug/net7.0",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
